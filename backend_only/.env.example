# Environment Configuration Template
# Copy this file to .env and fill in your production values
# IMPORTANT: Never commit .env file with actual secrets to repository

# Server Configuration
PORT=3001
NODE_ENV=production

# Database Configuration
# MongoDB Atlas Connection String Format:
# mongodb+srv://username:jobportal1122@cluster-name.mongodb.net/database-namejobportal?retryWrites=true&w=majority
MONGODB_URL=mongodb+srv://username:password@your-cluster.mongodb.net/jobportal?retryWrites=true&w=majority

# JWT Secret - Generate with: node -e "console.log(require('crypto').randomBytes(32).toString('hex'))"
# Must be at least 32 characters long
JWT_SECRET=your_generated_secret_key_here_min_32_characters_long

# Frontend URL for CORS (set this when deploying frontend)
# Example: https://your-frontend-domain.com
FRONTEND_URL=http://localhost:5173

# Optional: File Upload Configuration
MAX_FILE_SIZE=5242880

# Optional: Session Configuration
SESSION_SECRET=your_session_secret_here

# Optional: Email Configuration (if implementing email features)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your_email@gmail.com
SMTP_PASS=your_email_password
